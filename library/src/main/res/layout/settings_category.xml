<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/category_card_bottom_margin"
    android:elevation="@dimen/category_card_elevation"
    card_view:cardCornerRadius="@dimen/category_card_border_radius"
    card_view:cardElevation="@dimen/category_card_elevation">

    <LinearLayout
        android:id="@+id/headersGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/category_title_padding"
            android:textSize="@dimen/category_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</android.support.v7.widget.CardView>